<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head") %>

    <body>
        <%- include("partials/header") %>
        <main>
            <div class="container-xl mx-auto p-0 m-0 row">
                <div class="col-12 d-flex justify-content-center mt-2">
                    <h3><%= movie.title %></h3>
                </div>

                <div class="col-12">
                    <ul>
                        <li class="mt-3">Premios: <%= movie.awards %></li>
                        <li class="mt-3">
                            Recaudacion: <%= movie.revenue %>
                        </li>
                        <li class="mt-3">
                            Fecha de estreno: <%= movie.release_date %>
                        </li>
                        <li class="mt-3">Duracion: <%= movie.length %></li>
                        <li class="mt-3">
                            Genero: <%= movie.genre.name %>
                        </li>
                        <li class="mt-3">
                            Actores:
                            <ul>
                                <% for (let i = 0; i < movie.actors.length;
                                i++){%>
                                <li class="mt-2">
                                    <%=movie.actors[i].first_name
                                    %><%=movie.actors[i].last_name%>
                                </li>
                                <%}%>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="col-12 mt-3 d-flex justify-content-around">
                    <div class="col-6 text-center">
                        <a
                            href="/movies/edit/<%= movie.id %>"
                            class="btn btn-warning"
                        >
                            Editar
                        </a>
                    </div>
                    <div class="col-6 text-center">
                        <form
                            action="/movies/delete/<%= movie.id %>?_method=delete"
                            method="POST"
                        >
                            <button type="submit" class="btn btn-danger">
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-center mt-4">
                    <a href="/movies" class="movies-a"
                        >Volver a Listado de peliculas</a
                    >
                </div>
            </div>
        </main>
        <%- include("partials/footer") %>
    </body>
</html>
